{
    "phrases": [
        "mastered",
        "master",
        "mastery",
        "masterful",
        "gamechanger",
        "masterpiece",
        "crucial",
        "cutting-edge",
        "revolutionize",
        "harness",
        "robust",
        "elevate",
        "foster",
        "furthermore",
        "moreover",
        "therefore",
        "subsequently",
        "ultimately",
        "think of X as Y",
        "imagine X is similar to Y",
        "X works just like Y",
        "X can be compared to Y",
        "X functions similarly to Y",
        "imagine this/that",
        "provide a valuable insight",
        "left an indelible mark",
        "play a significant role in shaping",
        "an unwavering commitment",
        "As an AI language model,",
        "It is worth noting that,",
        "In conclusion, it is clear that",
        "I hope this helps!",
        "Feel free to ask if you have any more questions."
    ],
    "patterns": [
        {
            "category": "Comparisons",
            "patterns": [
                "\\b\\w+ (is like|can be compared to|functions similarly to|works just like) \\w+\\b",
                "\\bthink of \\w+ as \\w+\\b",
                "\\bimagine \\w+ (is similar to|resembles) \\w+\\b"
            ]
        },
        {
            "category": "Powerful/Advanced",
            "patterns": [
                "\\b(powerful|advanced) (tools?|features?|capabilities|solutions?|approaches?|methods?|techniques?|strategies?|systems?|functionalities?)\\b",
                "\\b(incredibly|highly|most|more) (powerful|advanced)\\b"
            ]
        },
        {
            "category": "Research_Phrases",
            "patterns": [
                "\\bResearch shows\\b",
                "\\bStudies indicate\\b",
                "\\bAccording to research\\b",
                "\\bResearchers have found\\b"
            ]
        },
        {
            "category": "Sentence_Structure_Patterns",
            "patterns": [
                "(?mi)^\\s*(?:when|as)\\b[^,]+,\\s*[^.?!]+[.?!]",
                "(?mi)^\\s*[A-Z][a-z]+ing\\b[^,]+,\\s*[^.?!]+[.?!]",
                "(?i)\\byou\\s+(?:need|have)\\s+to\\s+\\w+\\b",
                "(?i)\\bwe\\s+(?:will|can|are going to)\\s+(?:now\\s+)?\\w+\\b"
            ]
        },
        {
            "category": "Redundancy/Verbosity",
            "patterns": [
                {"pattern": "\\bmoreover\\b", "min_occurrences": 2},
                {"pattern": "\\bit is worth noting that\\b", "min_occurrences": 2},
                {"pattern": "\\bin conclusion\\b", "min_occurrences": 2}
            ]
        }
    ],
    "metadata": {
        "description": "Simplified AI detection patterns",
        "version": "2.0",
        "lastUpdated": "2025-05-23"
    }
}
